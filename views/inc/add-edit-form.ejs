<form class="form-add" action="/admin/<%= (mode==='Edit') ? 'edit' : 'add' %>-product" method="POST">
    <div class="control-group">
        <label class="form-add__label" for="itemName">Item</label> 
        <input class="form-add__input" id="itemName" type="text" name="itemName" value="<%= (mode==='Edit') ? product.itemName : '' %>" required>
    </div>
    <div class="control-group">
        <label class="form-add__label" for="imageURL">Image URL</label> 
        <input class="form-add__input" id="imageURL" type="text" name="imageURL"value="<%= (mode==='Edit') ? product.imageURL : '' %>" required>
    </div>
    <div class="control-group">
        <label class="form-add__label" for="price">Price</label> 
        <input class="form-add__input" id="price" type="number"  step="0.01" name="price"value="<%= (mode==='Edit') ? product.price : '' %>" required>
    </div>
    <div class="control-group">
        <label class="form-add__label" for="description">Description</label> 
        <textarea class="form-add__input" id="description" type="text" name="description" rows="5" required><%= (mode==='Edit') ? product.description : '' %></textarea>
    </div>
    <% if (mode==='Edit') { %>
        <input type='hidden' name="productId" value='<%= product.id %>'>
    <% } %>
    <button class="form-add__submit" type="submit"><%= (mode==='Edit') ? 'Update' : 'Add' %> Product</button>
</form>
